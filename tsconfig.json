{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "checkJs": false,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "types": [
      "jest",
      "node"
    ],
    "lib": [
      "esnext"
    ],
    "paths": {
      "src/*": ["./src/*"],
      "./*": ["./*"],
      "test/*": ["./test/*"]
    }
  },
  "include": [
    "src/**/*.ts", 
    "types/index.d.ts"  
, "index.js", "src/array.js", "src/number.js"  ],
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ]
}
